<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.catquiz.MainActivityH1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/banner_H1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_height"
            android:scaleType="centerCrop"
            android:src="@drawable/cat3" />

        <TextView
            android:id="@+id/questionsQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_M"
            android:layout_marginTop="@dimen/margin_M"
            android:background="@color/aqua"
            android:padding="@dimen/padding_S"
            android:text="Questions 1 - 5"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_M" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_M"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:padding="@dimen/padding_SM">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_1"
                android:textAllCaps="true"
                android:textSize="@dimen/text_M" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/select_all_true_statements"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_M" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:text="@string/select_all_checkboxes"
                android:textAllCaps="false"
                android:textSize="@dimen/text_M" />

            <CheckBox
                android:id="@+id/qH1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_M"
                android:paddingLeft="@dimen/padding_L"
                android:text="@string/ansH1_1"
                android:textSize="@dimen/text_M" />

            <CheckBox
                android:id="@+id/qH1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_M"
                android:paddingLeft="@dimen/padding_L"
                android:text="@string/ansH1_2"
                android:textSize="@dimen/text_M" />

            <CheckBox
                android:id="@+id/qH1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_M"
                android:paddingLeft="@dimen/padding_L"
                android:text="@string/ansH1_3"
                android:textSize="@dimen/text_M" />

            <CheckBox
                android:id="@+id/qH1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_M"
                android:paddingLeft="@dimen/padding_L"
                android:text="@string/ansH1_4"
                android:textSize="@dimen/text_M" />

            <CheckBox
                android:id="@+id/qH1_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_M"
                android:paddingLeft="@dimen/padding_L"
                android:text="@string/ansH1_5"
                android:textSize="@dimen/text_M" />

            <CheckBox
                android:id="@+id/qH1_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_M"
                android:paddingLeft="@dimen/padding_L"
                android:text="@string/ansH1_6"
                android:textSize="@dimen/text_M" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_M"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:padding="@dimen/padding_SM">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_2"
                android:textAllCaps="true"
                android:textSize="@dimen/text_M" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_H2"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_M" />

            <RadioGroup
                android:id="@+id/question_H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/qH2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/a_true"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/a_false"
                    android:textSize="@dimen/text_M" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_M"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:padding="@dimen/padding_SM">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_3"
                android:textAllCaps="true"
                android:textSize="@dimen/text_M" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_H3"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_M" />

            <RadioGroup
                android:id="@+id/question_H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/qH3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH3_1"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH3_2"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH3_3"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH3_4"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH3_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH3_5"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH3_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH3_6"
                    android:textSize="@dimen/text_M" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_M"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:padding="@dimen/padding_SM">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_4"
                android:textAllCaps="true"
                android:textSize="@dimen/text_M" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_H4"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_M" />

            <EditText
                android:id="@+id/question_H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginLeft="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:background="#f7eff4"
                android:hint="0"
                android:inputType="number"
                android:maxLength="2"
                android:padding="@dimen/text_M" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_M"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:padding="@dimen/padding_SM">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_5"
                android:textAllCaps="true"
                android:textSize="@dimen/text_M" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_S"
                android:layout_marginTop="@dimen/margin_S"
                android:text="@string/question_H5"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_M" />

            <RadioGroup
                android:id="@+id/question_H5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/qH5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH5_1"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH5_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH5_2"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH5_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH5_3"
                    android:textSize="@dimen/text_M" />

                <RadioButton
                    android:id="@+id/qH5_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_M"
                    android:paddingLeft="@dimen/padding_L"
                    android:text="@string/ansH5_4"
                    android:textSize="@dimen/text_M" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_XL"
                android:layout_marginRight="@dimen/margin_M"
                android:layout_weight="1"
                android:background="@drawable/restart_button"
                android:onClick="restart"
                android:text="@string/restart_button"
                android:textSize="@dimen/text_M" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_XL"
                android:layout_marginRight="@dimen/margin_M"
                android:layout_weight="1"
                android:background="@drawable/next_button_blue"
                android:onClick="submit"
                android:text="@string/next_button"
                android:textSize="@dimen/text_M" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>